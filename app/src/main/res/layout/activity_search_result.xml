<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="com.igor.bykov.skyscannerapp.presentation.ui.searchresult.SearchResultActivity"
    >

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?attr/colorPrimary"
      android:minHeight="?attr/actionBarSize"
      app:theme="@style/ToolbarTheme"
      >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="start"
          android:text="BUD - London"
          android:textColor="@color/white"
          android:textSize="20sp"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="start"
          android:text="12 Nov - 16 Nov, 1 adult, economy"
          android:textColor="#D8D8D8"
          />

    </LinearLayout>


  </androidx.appcompat.widget.Toolbar>

  <androidx.cardview.widget.CardView
      android:id="@+id/card_view"
      android:layout_gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        >

      <TextView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:gravity="start"
          android:text="365 of 365 results"/>

      <TextView
          android:id="@+id/info_text"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:textAllCaps="true"
          android:gravity="end"
          android:text="search and filters"/>

    </LinearLayout>


  </androidx.cardview.widget.CardView>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/searchResultRv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="8dp"
      />

</LinearLayout>

